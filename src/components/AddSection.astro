---
interface Props {
    height: string;
    width?: string;
    className?: string;
}

const { height, width, className } = Astro.props;
---

<section
    class={`section-add f-col f-center mx-auto ${className || ""}`}
    style={`height: ${height}; width: ${width};`}
>
    <slot />
</section>

<style>
    .section-add {
        max-width: 700px;
        border: solid 1px rgba(var(--lb-br), 0.4);
    }
</style>
