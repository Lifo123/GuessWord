---
import { getCollection } from "astro:content";
const lists = await getCollection("Help");
---

<footer class="w-100 d-flex f-center px-4 py-5">
    <ul class="f-row g-3 f-center">
        {
            lists.map((list: any) => (
                <li>
                    <a href={`/GuessWord/blog/${list.slug}/`}>
                        {list.data.title}
                    </a>
                </li>
            ))
        }
        <li>
            <a href="https://github.com/Lifo123/GuessWord/" target="_blank"
                >Repository</a>
        </li>
        <li>
            <a
                aria-label="Boton link Outlook"
                title="alberto_p-@hotmail.com"
                href="mailto:alberto_p-@hotmail.com?subject=Contact%20me"
                >Contact me</a>
        </li>
        <li>
            <a href="https://github.com/Lifo123/" target="_blank"
                >{new Date().getFullYear()} - Lifo</a>
        </li>
    </ul>
</footer>

<style is:inline>
    footer {
        height: 64px;
    }
    footer a {
        font-weight: 400;
        font-size: clamp(0.8rem, 1.5vw, 12px);
        color: var(--w-low-text);
    }
    footer a:hover {
        color: var(--f-text-blue) !important;
        text-decoration: underline;
    }
</style>
