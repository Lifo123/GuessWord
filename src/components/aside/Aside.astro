        </ul>
    </div>
    <footer class="mb-2">
        <!-- <UpgradePremium client:visible /> -->
         donate me pls
    </footer>
</aside>

<style>
    .aside {
        background-color: rgba(var(--lb-bg-2));
        line-height: 1.2;
        padding-inline: 0.75rem;
        width: 100%;
        max-width: 280px;
        left: -700px;
        z-index: 500;
        transition: left 0.26s ease;
    }

    .aside.active {
        left: 0;
    }
    .aside .aside-item {
        width: 100%;
    }
    .aside .aside-item a {
        width: 100%;
        font-weight: 375;
        padding: 0.625rem 0.5rem;
        color: rgb(var(--lb-title));
    }
    .aside .aside-item:hover {
        background-color: rgba(var(--lb-bg-4), 0.9);
    }

    @media (width < 560px) {
        .aside {
            max-width: 100%;
        }
    }
</style>
