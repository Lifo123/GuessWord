---
import "@Assets/css/Global.css";

import Layout from "@Layouts/Layout.astro";
import Header from "@Components/Header.astro";
import Footer from "@Components/Footer.astro";

import { Toaster } from "sonner";
import Wrapper from "@Apps/components/Wrapper";
import WordleDescription from "@Content/index/WordleDescription.md";
---

<Layout title="GuessWord" description="wasa">
	<Toaster
		position="top-center"
		client:only="react"
		duration={1000}
		visibleToasts={1}
		toastOptions={{
			className: "alert",
		}}
	/>
	<div class="app-game">
		<div class="hero f-col">
			<Header />
			<Wrapper client:only="react" />
		</div>
		<div class="f-markdown w-70 mx-auto mt-2">
			<WordleDescription />
		</div>
		<Footer />
	</div>
</Layout>

<style is:inline>
	.hero {
		min-height: 100vh;
	}
	.hero:nth-child(2) {
		flex-grow: 1;
	}
</style>
